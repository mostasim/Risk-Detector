<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/txt_view_margin_10"
    android:layout_marginTop="@dimen/txt_view_margin_10"
    android:layout_marginRight="@dimen/txt_view_margin_10"
    android:background="@color/transparent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/txt_view_margin_5"
        app:cardElevation="0dp"
        app:cardPreventCornerOverlap="false"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/txt_view_margin_10">

            <ImageView
                android:id="@+id/ivDoctor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:contentDescription="dummy"
                android:src="@drawable/doctor" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/txt_view_margin_10"
                android:layout_toRightOf="@+id/ivDoctor"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvDoctorName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="monospace"
                    android:text="Dr. Iqbal Bahar Shihab"
                    android:textColor="@color/darkjunglegreen"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvSpecial"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/txt_view_margin_5"
                    android:fontFamily="monospace"
                    android:text="Neurologist"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@color/darkjunglegreen"
                    android:textSize="14sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/tvDoctorTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/txt_view_margin_5"
                    android:fontFamily="monospace"
                    android:text="MMBS, FCPS   I   DMC"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@color/trolleygrey"
                    android:textSize="14sp"
                    android:textStyle="normal" />

            </LinearLayout>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>