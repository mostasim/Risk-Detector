<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_border_background"
    android:orientation="vertical"
    android:padding="@dimen/txt_view_margin_15">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/txt_view_margin_10"
        android:text="@string/settings"
        android:textColor="@color/black"
        android:textSize="@dimen/txtview_toolbar_title_22sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/txt_view_margin_15"
        android:text="@string/minimum_distance_alarm"
        android:textColor="@color/black"
        android:textSize="@dimen/txtview_toolbar_title_22sp"
        android:textStyle="normal" />

    <EditText
        android:id="@+id/min_alert_meter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/txt_view_margin_5"
        android:background="@drawable/edittext_custom_background_gray"
        android:hint="@string/type_range"
        android:inputType="number"
        android:padding="@dimen/txt_view_margin_15"
        android:singleLine="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/txt_view_margin_15"
        android:text="@string/refresh_rate"
        android:textColor="@color/black"
        android:textSize="@dimen/txtview_toolbar_title_22sp"
        android:textStyle="normal" />

    <EditText
        android:id="@+id/refresh_rate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/txt_view_margin_5"
        android:background="@drawable/edittext_custom_background_gray"
        android:hint="@string/type_rate"
        android:inputType="number"
        android:padding="@dimen/txt_view_margin_15"
        android:singleLine="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/txt_view_margin_15"
        android:gravity="right"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/txt_view_margin_15"
            android:background="@color/transparent"
            android:text="@string/cancel"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/txt_view_margin_15"
            android:background="@color/transparent"
            android:text="@string/update"
            android:textColor="@color/blue_color" />

    </LinearLayout>

</LinearLayout>